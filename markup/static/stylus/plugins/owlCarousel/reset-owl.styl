.reset-owl
  .owl-nav
    margin-top 0
  .owl-prev,
  .owl-next
    margin 0 !important
    span
      font-size 0
    &:hover
      background-color transparent !important
    &:focus
      outline none !important
  .owl-dot
    &:focus
      outline none
  .owl-prev,
  .owl-next
    position relative
    span
      display block
      width 20px
      height 32px
      &::before,
      &::after
        center-absolute()

        content ''

        width 100%
        height 5px

        background-color #a6a6a6
      &::before
        top 12px

        transform rotate(45deg)
      &::after
        top -12px

        transform rotate(-45deg)
  .owl-next
    transform rotate(180deg) translateY(-1px)