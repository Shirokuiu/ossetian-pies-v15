.good
  box-sizing border-box
  padding 20px
  
  border 1px solid #E5E5E5
  border-radius 10px
  
  transition 0.2s ease
  &--index
    width: 32.1%;
    margin-right 30px
    margin-bottom 30px
    &:nth-child(3n)
      margin-right 0
  &--slider
    .cont .block-left .price .current-price
      min-height 52px
  &:hover
    box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.25);
  .cont
    display flex
    padding-left: 3.7%;
    padding-right: 5.48%;
    .add
      reset-button()
      
      position relative
      
      width 130px
      height 130px
      margin-left: 8.04%;
      
      background-color #FFF2ED
      box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.25);
      
      border-radius 50%
      
      transition 0.2s ease
      span
        center-absolute()
        icon(50px, 77px, #56C225)
        
        top -5px
        .icon
          transition 0.2s ease
      &:hover
        background-color #56C225
        box-shadow none
        span
          .icon
            fill #ffffff
    .block-left
      flex-grow 1
      width 50%
      .price
        display flex
        justify-content flex-end
        align-items center
        flex-wrap wrap
        .current-price 
          font('Gotham Pro', 36px, 400, #FD003A)
          
          margin-left 20px
          span
            margin-right 5px
            
            font-size 48px 
            line-height 52px
          &.fix-size
            font-size: 29px;
            line-height: 33px;
            span
              font-size: 40px;
              line-height: 44px;
        .old-price
          font('Gotham Pro', 18px, 400, #90929D)
          
          position relative
          &::before
            center-absolute()
            
            content ''
            
            width 100%
            height 1px
            
            background-color #000000
          span
            margin-right 5px
            
            font-size 24px
            line-height 26px
      .options
        display flex
        margin-bottom 15px
        .calculate
          flex-grow 1
          width: 10%;
          h3
            font('Raleway', 18px, 500, #262A3C)
            
            margin-bottom 5px
            
            text-align center
          .calculate-block
            display flex
            justify-content center
            align-items center
            padding 11px 0
            
            background-color #FFF2ED
            
            border-radius 10px
            p
              font('Gotham Pro', 24px, 400, #FF6800)
              
              width 51px
              margin 0 4px
              
              text-align center
            button
              reset-button()
              calcBtn(24px, 24px, #FF6800, 2px)
        .weight
          width: 46.1%;
          margin-right: 9.16%;
          h3
            font('Raleway', 18px, 500, #262A3C)
            
            margin-bottom 5px
            
            text-align center
          .weight-block
            position relative
            
            cursor pointer
            &.open
              p
                border-radius 10px 10px 0 0
              ul
                display block
            ul
              reset-list()
              
              position absolute
              left 0
              right 0
              z-index 5
              
              display none
              
              background-color #FFF2ED
              
              border-radius 0 0 10px 10px
              li
                font('Gotham Pro', 24px, 400, #FF6800)
                
                padding 11px 0
                padding-left 19px
                
                transition 0.2s ease
                &:last-child
                  border-radius 0 0 10px 10px
                &:hover
                  background-color #ffdcc5
            p
              font('Gotham Pro', 24px, 400, #FF6800)
              
              position relative
              
              box-sizing border-box
              min-height 50px
              padding 11px 0
              padding-left 19px
              
              background-color #FFF2ED
              
              border-radius 10px
              span
                icon(24px, 24px, #FF6800)
                
                position absolute
                top 0
                right 10px
                bottom 0
                
                margin auto
  .headline
    font('Raleway', 24px, 700, #262A3C, true)
    
    display block
    margin-bottom 18px
    
    text-align center
  .fotorama-wrap
    position relative
    .count
      font('SFUIDisplay', 14px, 500, #FFFFFF)
      
      position absolute
      left 50%
      bottom: 90px;
      z-index: 10;
      
      width 60px
      height 30px
      margin-left -30px
      
      text-align center
      line-height 28px
      
      background-color rgba(32, 35, 56, 0.7)
      
      border-radius 30px
  .fotorama
    .fotorama__stage
      overflow: visible;
      z-index: 10;
    .fotorama__nav-wrap
      position: relative;
      z-index: 5;
    .fotorama__arr
      bgs(31px, 31px)
      bgi('right-arrow.svg')
      
      transform: translate3d(0,0,0) !important
      opacity: 1;
      position: absolute;
      top: auto;
      bottom: -53px;
      background-position 0
      transition 0s !important
    .fotorama__arr--prev
      left 112px
      &:hover
        bgi('right-arrow-hover.svg')
        
        transform rotateZ(180deg) !important
    .fotorama__arr--next
      right: 109px;
      
      transform rotateZ(180deg) !important
      &:hover
        bgi('right-arrow-hover.svg')
        
        transform rotateZ(0) !important
    .fotorama__thumb-border
      display none
    .fotorama__thumb
      opacity: 0.2;
      
      transition 0.3s ease
    .fotorama__active
      .fotorama__thumb
        opacity: 1;
        
@media(max-width 1760px)
  .good
    .fotorama .fotorama__arr--next
      right: 81px;
    .fotorama .fotorama__arr--prev
      left: 81px;
    .cont .block-left .options .weight .weight-block p
      font-size: 19px;
      line-height: 27px;
    .cont .block-left .options .weight .weight-block p span
      width: 18px;
      height: 18px;
    .cont .block-left .options .weight .weight-block p span .icon
      width: 18px;
      height: 18px;
    .cont .block-left .options .weight .weight-block ul li
      font-size: 19px;
      line-height: 23px;
    .cont .add
      width: 100px;
      height: 100px;
      
