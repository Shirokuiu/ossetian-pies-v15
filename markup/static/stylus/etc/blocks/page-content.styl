.page-content__goods-row
  margin-bottom 30px
  .container
    display flex
    flex-wrap wrap
    margin-bottom -30px

.page-content__order
  display flex
  flex-direction column
  min-height 500px
  
  background-image url('%=static=%content/page-content-order-bg.png')
  background-repeat no-repeat
  background-size cover
  
  border-radius: 0 43% 0 0;
  .container
    flex-grow 1
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin 0
    a
      font('Raleway', 28px, 500, #FFFFFF, true)
      
      position relative
      
      box-sizing border-box
      display block
      align-self flex-start
      min-width 400px
      margin-left: 10%;
      padding: 19px 0;
      
      text-align center
      
      background-color #56C225
      
      border-radius 0 40px
      span
        icon(25px, 25px, #ffffff)
        
        position absolute
        top 0
        left 47px
        bottom 0
        
        margin auto
    ul
      reset-list()
      
      margin-bottom 35px
      li
        font('Raleway', 36px, 600, #FFFFFF)
        
        display flex
        align-items center
        margin-bottom 35px
        &:last-child
          margin-bottom 0
        &::before
          content ''
          
          width 40px
          height 2px
          margin-right 15px
          
          background-color #FFFFFF
        