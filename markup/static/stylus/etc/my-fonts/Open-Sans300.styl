@font-face {
  font-family: 'Open Sans';
  font-style: normal;
  font-weight: 300;
  src: url('../fonts/open-sans-v15-cyrillic_latin-300.eot'); /* IE9 Compat Modes */
  src: local('Open Sans Light'), local('OpenSans-Light'),
       url('../fonts/Open-Sans/Open-Sans300/open-sans-v15-cyrillic_latin-300.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
       url('../fonts/Open-Sans/Open-Sans300/open-sans-v15-cyrillic_latin-300.woff2') format('woff2'), /* Super Modern Browsers */
       url('../fonts/Open-Sans/Open-Sans300/open-sans-v15-cyrillic_latin-300.woff') format('woff'), /* Modern Browsers */
       url('../fonts/Open-Sans/Open-Sans300/open-sans-v15-cyrillic_latin-300.ttf') format('truetype'), /* Safari, Android, iOS */
       url('../fonts/Open-Sans/Open-Sans300/open-sans-v15-cyrillic_latin-300.svg#OpenSans') format('svg'); /* Legacy iOS */
}